---
import Layout from '../../layouts/Layout.astro';
import SectionHeading from '../../layouts/SectionHeading.astro';
import Button from '../../components/Button.astro';
import RedactedResume from '/redacted-resume.png';
---

<Layout title="Markdown Resume">
	<main class="" id="main">
		<!-- bg-stone-900 text-stone-600 -->
		<a href="/">
			<i class="fa-solid fa-circle-left fa-2xl"></i>
		</a>

		<h1 class="font-serif font-bold">ðŸ“„ This is my resume.</h1>

		<SectionHeading title="Redacted Resume"/>

		<div class="flex justify-center"> 
			<img src={RedactedResume}></img>
		</div>

		<div class="flex justify-center pt-6 cursor-pointer">
			<div id="">
				<i class="fa-solid fa-file-arrow-down fa-2xl open-file"></i>
			</div>
		</div>

	</main>
</Layout>

<style>
	h1 {
		margin: 2rem 0;
	}

	main {
		margin: auto;
		padding: 1em;
		max-width: 180ch;
	}

	@keyframes pulse {
		0%,
		100% {
			background-position-y: 0%;
		}
		50% {
			background-position-y: 80%;
		}
	}
</style>

<script>
	document.addEventListener('click', function (event) {
		if (!event.target.matches('.open-file')) return;

		event.preventDefault();

		window.open("/redacted-resume.pdf",'_blank');
}, false);
</script>
